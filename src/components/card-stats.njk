<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <span class="h6 font-semibold text-muted text-sm d-block mb-2">{{ title }}</span>
                <span class="h3 font-bold mb-0">{{ value }}</span>
            </div>
            <div class="col-auto">
                <div class="icon icon-shape bg-{{ icon.color }} text-white text-lg rounded-circle">
                    <i class="bi bi-{{ icon.code }}"></i>
                </div>
            </div>
        </div>
        {% if badge %}
        <div class="mt-2 mb-0 text-sm">
            <span class="badge badge-pill bg-soft-{{ badge.color }} text-{{ badge.color }} me-2">
                <i class="bi bi-{{ badge.icon.code }} me-1"></i>{{ badge.text }}
            </span>
            <span class="text-nowrap text-xs text-muted">{{ badge.helper }}</span>
        </div>
        {% endif %}
    </div>
</div>
